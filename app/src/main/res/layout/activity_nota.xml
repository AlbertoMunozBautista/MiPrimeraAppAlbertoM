<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_degradado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NotaAcivity">

    <EditText
            android:layout_width="303dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/NotaEtAsunto"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:hint="@string/asunto"/>
    <EditText
            android:layout_width="303dp"
            android:layout_height="114dp"
            android:inputType="textMultiLine"
            android:background="@color/colorBlanco"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/NotaEtTexto"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NotaEtAsunto" android:layout_marginTop="16dp"/>
    <Button
            android:text="@string/añadir"
            android:background="@drawable/btn_background"
            android:textColor="@drawable/btn_text"
            android:layout_width="147dp"
            android:layout_height="44dp" android:id="@+id/NotaBtnAñadir"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NotaEtTexto" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>