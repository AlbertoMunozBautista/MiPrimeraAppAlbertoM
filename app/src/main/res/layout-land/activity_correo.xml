<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_degradado"
        tools:context=".CorreoActivity">

    <EditText
            android:layout_width="303dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/CorreoEtAsunto"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:hint="@string/asunto"
            app:layout_constraintTop_toBottomOf="@+id/CorreoEtPara"/>
    <EditText
            android:layout_width="303dp"
            android:layout_height="41dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/CorreoEtPara"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:hint="@string/para"/>
    <EditText
            android:layout_width="303dp"
            android:layout_height="114dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:background="@color/colorBlanco"
            android:ems="10"
            android:id="@+id/CorreoEtTexto"
            app:layout_constraintTop_toBottomOf="@+id/CorreoEtAsunto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/enviar"
            android:background="@drawable/btn_background"
            android:textColor="@drawable/btn_text"
            android:layout_width="157dp"
            android:layout_height="44dp" android:id="@+id/CorreoBtnEnviar"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CorreoEtTexto" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>