<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_degradado"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="531dp"
            android:layout_height="201dp" app:srcCompat="@drawable/logo_instituto" android:id="@+id/MainImaLogo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"/>
    <TextView
            android:text="@string/nombreCiclo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/MainTvNombre"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MainImaLogo" android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.543"/>
</androidx.constraintlayout.widget.ConstraintLayout>