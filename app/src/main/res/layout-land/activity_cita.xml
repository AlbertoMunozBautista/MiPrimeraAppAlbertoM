<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_degradado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CitaActivity">

    <EditText
            android:layout_width="303dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/CitaEtTitulo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="4dp" android:hint="@string/titulo"/>
    <EditText
            android:layout_width="303dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/CitaEtLocalizacion"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CitaEtTitulo"
            android:hint="@string/locaclizacion"/>
    <EditText
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/CitaEtFechaIni"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.727" app:layout_constraintTop_toBottomOf="@+id/CitaEtLocalizacion"
    />
    <TextView
            android:text="@string/fechaIni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/CitaTvFechaIni"
            app:layout_constraintEnd_toStartOf="@+id/CitaEtFechaIni" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CitaEtLocalizacion" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.635"/>
    <EditText
            android:layout_width="110dp"
            android:layout_height="45dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/CitaEtFechaFin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CitaEtFechaIni"
            app:layout_constraintHorizontal_bias="0.727"/>
    <TextView
            android:text="@string/fechaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/CitaTvFechaFin"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/CitaEtFechaFin"
            app:layout_constraintTop_toBottomOf="@+id/CitaTvFechaIni" android:layout_marginTop="32dp"
            app:layout_constraintHorizontal_bias="0.635"/>
    <Button
            android:text="@string/agregar"
            android:layout_width="132dp"
            android:background="@drawable/btn_background"
            android:textColor="@drawable/btn_text"
            android:layout_height="40dp" android:id="@+id/CitaBtnContacto"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CitaEtFechaFin"
            app:layout_constraintHorizontal_bias="0.498"/>
</androidx.constraintlayout.widget.ConstraintLayout>